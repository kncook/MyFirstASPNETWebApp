    <div>
        @RenderBody()
    </div>

    <center><footer>© 2023 KatSite, Inc. All Rights Reserved</footer></center>

    <!--links to javascript files-->
    <script src="~/lib/jquery/jquery-3.6.3.min.js"></script>
