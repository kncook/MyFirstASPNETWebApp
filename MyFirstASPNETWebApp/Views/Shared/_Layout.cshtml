    <link rel="icon" href="~/img/icons8-ok-48.png"
          type="image/x-icon">

</head>
<body>
    <nav>
        <ul>

            <li><a asp-controller="Blah" asp-action="Index">Home</a></li>
            <li><a asp-controller="Blah" asp-action="GradeCalculator">Grade Calc</a></li>
        </ul>
    </nav>

    @*allows each page to have different headers and then rendors to the other pages code*@
